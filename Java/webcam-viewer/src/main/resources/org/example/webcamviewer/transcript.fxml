<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.webcamviewer.TranscriptionController">

    <!-- Sidebar (Reused from Dashboard) -->
    <left>
        <VBox alignment="CENTER" prefWidth="300" spacing="20" style="-fx-background-color: #2C3E50; -fx-padding: 20px;">
            <Label style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" text="Resono"/>
            <Button fx:id="btnDashboard" onAction="#handleDashboardButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                    text="Dashboard"/>
            <Button fx:id="btnUpload" onAction="#handleUploadButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                    text="Upload Video"/>
            <Button fx:id="btnTranscription" onAction="#handleTranscriptionButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                    text="Transcription"/>
            <Button fx:id="btnSettings" onAction="#handleWebcamButton"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                    text="Settings"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20px;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Transcription Center"/>

            <!-- Search and Filter Bar -->
            <HBox spacing="10">
                <TextField fx:id="searchField" onKeyReleased="#onSearch" promptText="Search videos..."/>
                <ComboBox fx:id="filterOptions">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Date"/>
                            <String fx:value="Name"/>
                            <String fx:value="Length"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Uploaded videos: "/>

            <!-- Video List -->
            <ListView fx:id="videoListView" prefHeight="200"/>

            <!-- Transcript and Summary Controls -->
            <HBox spacing="10">
                <Button fx:id="accessTranscriptButton" onAction="#accessTranscript" text="Access Transcript"/>
                <Button fx:id="generateSummaryButton" onAction="#generateSummary" text="Generate Summary"/>
            </HBox>

            <!-- Transcript Display Area -->
            <TextArea fx:id="transcriptArea" editable="false" prefHeight="150"
                      promptText="Transcript will appear here..." wrapText="true"/>

            <!-- Summary Display Area -->
            <TextArea fx:id="summaryArea" editable="false" prefHeight="100" promptText="Summary will appear here..."
                      wrapText="true"/>

            <!-- Download Buttons -->
            <HBox spacing="10">
                <Button fx:id="downloadTranscriptButton" onAction="#downloadTranscript" text="Download Transcript"/>
                <Button fx:id="downloadSummaryButton" onAction="#downloadSummary" text="Download Summary"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
