<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.webcamviewer.LoginController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: linear-gradient(to bottom, #f0f4f8, #d9e2ec);"
      prefWidth="400"
      prefHeight="300">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Welcome Back!" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-background-radius: 8; -fx-padding: 8;"/>
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>

    <Button text="Login"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10 20;"
            prefWidth="150"
            onAction="#handleLogin"/>


    <Label fx:id="loginStatus" style="-fx-text-fill: red;"/>

    <HBox alignment="CENTER" spacing="5">
        <Label text="Don't have an account?"/>
        <Hyperlink text="Sign up here" onAction="#switchToSignup"/>
    </HBox>
</VBox>
