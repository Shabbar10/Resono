<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.webcamviewer.SignupController"
      alignment="CENTER"
      spacing="15"
      style="-fx-background-color: linear-gradient(to bottom, #e8f0fe, #cfd8dc);"
      prefWidth="400"
      prefHeight="350">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

    <Label text="Create an Account" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <TextField fx:id="usernameField" promptText="Username"
               style="-fx-background-radius: 8; -fx-padding: 8;"/>
    <PasswordField fx:id="passwordField" promptText="Password"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                   style="-fx-background-radius: 8; -fx-padding: 8;"/>

    <Button text="Sign Up"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14px; -fx-padding: 10 20;"
            prefWidth="150"
            onAction="#handleSignup"/>

    <Label fx:id="signupStatus" style="-fx-text-fill: red;"/>

    <HBox alignment="CENTER" spacing="5">
        <Label text="Already have an account?"/>
        <Hyperlink text="Login instead" onAction="#switchToLogin"/>
    </HBox>
</VBox>
