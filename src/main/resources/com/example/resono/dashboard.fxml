<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXButton?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.resono.DashboardController">

    <!-- Sidebar -->
    <left>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 20px;" prefWidth="200">
            <Label text="Resono" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;" />
            <JFXButton text="Dashboard" fx:id="btnDashboard" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <JFXButton text="Upload Video" fx:id="btnUpload" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
<!--            <JFXButton text="Emotion Analysis" fx:id="btnAnalysis" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>-->
            <JFXButton text="Transcription" fx:id="btnTranscription" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
            <JFXButton text="Settings" fx:id="btnSettings" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"/>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Welcome to Resono!" style="-fx-font-size: 28px; -fx-font-weight: bold;" fx:id="welcomeMessage"/>
            <Label text="Get insights into your audience like never before!" style="-fx-font-size: 16px; -fx-text-fill: #555;" fx:id="subheading"/>
            <JFXButton text="Upload Your First Video" fx:id="uploadButton"
                       style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px; -fx-border-radius: 5px;"/>
        </VBox>
    </center>
</BorderPane>
